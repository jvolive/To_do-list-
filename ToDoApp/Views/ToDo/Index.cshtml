@model IEnumerable<ToDoApp.Models.Todo>

@{
    ViewData["Title"] = "ToDo List";
}

<h1>ToDo List</h1>

<p>
    <a asp-action="Create"style="text-decoration:none">Nova Tarefa</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"style="text-decoration:none">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id"style="text-decoration:none">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id"style="text-decoration:none">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
